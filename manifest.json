{
  "manifest_version": 2,
  "name": "My Cookie Monster",
  "version": "0.1",
  "background": { "scripts": ["background.js"] },
  "icons": {"48" : "small.png", 
            "128": "big.png" },
 "permissions": [
    "cookies",
    "<all_urls>",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "cookie.png",
    "default_popup": "popup.html"
  }
}